@model Project

@{
    Layout = "_Layout";

    ViewBag.Page = "Project Details";

}

<div class="text-center">
    <h1 class="display-4 page-title">@ViewBag.Page</h1>
</div>

@* Check for existence of a database *@
@try
{
    <div class="card">
        <div class="card-body">
            <div class="card-title">@Model.Name</div>
            <div class="card-text">@Model.Description</div>

            <dl class="row">
                <dt class="col-sm-3">Project ID</dt>
                <dd class="col-sm-9">@Model.ProjectId</dd>
            
                <dt class="col-sm-3">Start Date</dt>
                <dd class="col-sm-9">@Model.StartDate.ToShortDateString()</dd>
            
                <dt class="col-sm-3">End Date</dt>
                <dd class="col-sm-9">@Model.EndDate.ToShortDateString()</dd>
            
                <dt class="col-sm-3">Status</dt>
                <dd class="col-sm-9">@Model.Status</dd>
            </dl>

            <a asp-controller="Projects" asp-action="Index" class="btn btn-secondary">Back to Project List</a>
        </div>
    </div>
}
catch (NullReferenceException)
{
    <p class="not-found-db d-inline-block">Database not detected.  Please try again later.</p>
    <br/>
}
catch (Exception)
{
    <p class="not-found-fatal d-inline-block">Project currently unavailable.  Please try again later.</p>
    <br/>
}
<a asp-action="Index" class="btn btn-secondary">Back to Projects</a>