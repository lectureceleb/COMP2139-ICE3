@{
    Layout = "_Layout";
    
    ViewBag.Page = "About";
        
    // Define variable profile variables
    var name = "Omar McIntosh";
    var stuNumber = "101032428";
    var courseCode = "COMP 2139";
    var sectionCode = "50272";   // CRN
