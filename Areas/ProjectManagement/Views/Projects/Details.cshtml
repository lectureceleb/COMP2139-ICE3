@model Project

@{
    Layout = "_Layout";

    ViewBag.Page = "Project Details";
}

<div class="majestic-view card">
    @* <h1 class="display-4 page-title text-center">@ViewBag.Page</h1> *@
    <div class="card-body">
        @* Check for existence of a database *@
        @try
        {
            <!-- Add formatting --> 
            <div class="display-6 page-subtitle text-center">@Model.Name</div>
            <br/>

            <dl class="row">
                <dt class="col-sm-3">Project ID</dt>
                <dd class="col-sm-9">@Model.ProjectId</dd>

                <dt class="col-sm-3">Description</dt>
                <dd class="col-sm-9">@Model.Description</dd>

                <dt class="col-sm-3">Start Date</dt>
                <dd class="col-sm-9">@Model.StartDate.ToShortDateString()</dd>

                <dt class="col-sm-3">End Date</dt>
                <dd class="col-sm-9">@Model.EndDate.ToShortDateString()</dd>

                <dt class="col-sm-3">Status</dt>
                <dd class="col-sm-9">@Model.Status</dd>
            </dl>

            <a asp-controller="Projects" asp-action="Index" class="btn btn-secondary">Back to Projects</a>
        }
        catch (NullReferenceException)
        {
            <p class="not-found-db d-inline-block">Database not detected.  Please try again later.</p>
            <br/>
            <a asp-action="Index" class="btn btn-secondary">Back to Projects</a>
        }
        catch (Exception)
        {
            <p class="not-found-fatal d-inline-block">Project currently unavailable.  Please try again later.</p>
            <br/>
            <a asp-action="Index" class="btn btn-secondary">Back to Projects</a>
        }
    </div>
    
    <div id="project-comments">   <!-- Currently not styling for this id -->
        <h3>Comments</h3>
        
        <div id="comment-list" class="comments-container">   <!-- Currently not styling for this class -->
            <!-- Comments will be loaded here using jQuery/AJAX -->
        </div>
        
        <form id="add-comment-form" class="mt-3">   <!-- Currently not styling for this id -->
            <input type="hidden" name="ProjectId" value="@Model.ProjectId" />
            <div class="form-group">
                <textarea name="Content" class="form-control" placeholder="Add a comment..."></textarea>
            </div>
            <button type="submit" class="btn btn-success">Post a Comment</button>
        </form>
        
    </div>
</div>

@section Scripts {
    <script src="~/js/projectComment.js"></script>
    <script>
        $(document).ready(function() {
            // Changed var to const here (in case of debugging)
            const projectId = $('#project-comments input[name="ProjectId"]').val();            
            loadComments(projectId);
        });
    </script>
}