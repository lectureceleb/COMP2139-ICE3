@model ProjectTask

@{
    Layout = "_Layout";
    
    ViewBag.Page = "Delete Task";
}

<div>
    <h1 class="display-4 page-title text-center">@ViewBag.Page</h1>
    <div class="card">
        <div class="card-body">
            <dl class="row">
                <dt class="col-sm-2">
                    @Html.DisplayNameFor(model => model.Title)
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.Title)
                </dd>
                <dt class="col-sm-2">
                    @Html.DisplayNameFor(model => model.Description)
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.Description)
                </dd>
            </dl>

            <form asp-action="Delete" method="post">
                @* Hidden field sends related ProjectId with form data *@
                @Html.HiddenFor(model => model.ProjectTaskId)
                <input type="submit" value="Delete" class="btn btn-danger">
                <a asp-action="Index" asp-route-projectId="@Model.ProjectId" class="btn btn-warning">Cancel</a>
                <p class="d-inline confirm-delete">Are you sure you want to delete this task?</p>
            </form></div>

    </div>
</div>